{
  "$schema": "http://json-schema.org/schema",
  "id": "my-component",
  "title": "我自己的组件生成器",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "default": "name"
    },
    "path": {
      "type": "string",
      "default": "app"
    },
    "appRoot": {
      "type": "string"
    },
    "sourceDir": {
      "type": "string",
      "default": "src/app"
    },
    "service": {
      "type": "boolean",
      "default": false,
      "description": "Flag to indicate whether service should be generated.",
      "alias": "vgs"
    },
    "flat": {
      "type": "boolean",
      "description": "When true, creates the new files at the top level of the current project.",
      "default": false
    }
  }
}